{
  "name": "svelte-webserial",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach -p run build",
    "serve": "wsrun --parallel serve",
    "start": "concurrently \"wsrun --parallel start\" \"wsrun --parallel serve\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^6.2.0",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "wsrun": "^5.2.4"
  }
}
